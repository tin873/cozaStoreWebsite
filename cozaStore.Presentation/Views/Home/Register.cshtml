<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng Ký</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/wwwroot/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/css_login/util.css">
    <link rel="stylesheet" type="text/css" href="~/wwwroot/css_login/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/wwwroot/images/img-01.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" action="/Home/Register" method="post">
                    <span class="login100-form-title">
                        Đăng ký tài khoản
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" name="fullName" placeholder="Full Name" required maxlength="50">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="email" name="email" placeholder="Email" id="email" required maxlength="50">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    @if (ViewBag.error1 != null)
                    {
                        <p id="error" style="color: red; padding:10px; padding-left:37px;">@ViewBag.error1</p>
                    }
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="pass" placeholder="Password" maxlength="30">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" name="address" placeholder="Adress" required maxlength="50">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-address-card" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input id="phone" class="input100" type="text" name="phone" placeholder="Phone" maxlength="15" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </span>
                    </div>
                    @if (ViewBag.error2 != null)
                    {
                        <p id="errorphone" style="color: red; padding:10px; padding-left:37px;">@ViewBag.error2</p>
                    }
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Đăng ký
                        </button>
                    </div>


                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Login", "Home")">
                            Đã có tài khoản
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/wwwroot/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/vendor/bootstrap/js/popper.js"></script>
    <script src="~/wwwroot/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
        })
        document.getElementById("email").onclick = function () {
            document.getElementById("error").style.display = 'none';
        }
        document.getElementById("phone").onclick = function () {
            document.getElementById("errorphone").style.display = 'none';
        }
    </script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/js/main.js"></script>

</body>
</html>

