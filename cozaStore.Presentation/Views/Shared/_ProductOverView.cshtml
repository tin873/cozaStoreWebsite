@model Product
<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item ">
    <div class="block2">
        <div class="block2-pic hov-img0">
            @{
                string ImagePath = "~/wwwroot/images/" + Model.Image;
            }
            <img src="@Url.Content(ImagePath)" alt="IMG-PRODUCT">

            <a href="@Url.Action("Detail", "Products", new { id = Model.ProductID})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                Xem chi tiết
            </a>
        </div>

        <div class="block2-txt flex-w flex-t p-t-14">
            <div class="block2-txt-child1 flex-col-l ">
                <a href="@Url.Action("Detail", "Products", new { id = Model.ProductID})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 js-name-detail">
                    @Model.ProductName
                </a>

                <span class="stext-105 cl3">
                    @(Model.Price.ToString("#,###"))đ
                </span>
            </div>
        </div>
    </div>
</div>
