@model IEnumerable<ProductDetail>

@{
    ViewBag.Title = "Trang chủ quản lý sản phẩm";
}

<h2>Danh sách sản phẩm</h2>
<p>
    <a href="@Url.Action("Index", "ProductsManager")">Quay lại</a>
</p>
<p>
    @Html.ActionLink("Thêm mới", "Create", new { id = ViewBag.productId })
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img alt="Anh" height="180" width="150" src="~/wwwroot/images/@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductDetailId }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductDetailId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="container">
        <h3 style="text-align: center;">Hiện không có sản phẩm chi tiết hãy thêm sản phẩm chi tiết mới!</h3>
    </div>
}
